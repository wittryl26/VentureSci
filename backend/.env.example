# Backend environment (copy to .env)

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret  # from Supabase settings â†’ API
SUPABASE_DB_SCHEMA=public

# Database (if connecting directly)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/postgres

# API config
PORT=8000
ALLOWED_ORIGINS=http://localhost:3000
LOG_LEVEL=info

# JWT / auth
JWT_SECRET=generate-a-strong-secret
ACCESS_TOKEN_EXPIRES_MINUTES=60

# OAuth providers (mirror Supabase settings)
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_GITHUB_CLIENT_ID=your-github-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# Encrypted chat (server-side secrets; do not commit real keys)
ENCRYPTED_CHAT_PRIVATE_KEY_PATH=./keys/chat_private.pem
ENCRYPTED_CHAT_PUBLIC_KEY_PATH=./keys/chat_public.pem

# Storage/buckets
SUPABASE_STORAGE_BUCKET=files
SUPABASE_STORAGE_REGION=auto
